---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import postPartoImagen from '../assets/fotos/postparto1.jpg';
import postPartoImagen2 from '../assets/fotos/postparto2.jpg';
import Contact from '../components/Contact.astro';
import Layout from '../layouts/Layout.astro';



const fasesPosparto = [
  {
    titulo: "Fase inmediata (0-6 semanas)",
    descripcion: "Periodo crítico de recuperación física y adaptación",
    recomendaciones: [
      "Descanso prioritario y recuperación física",
      "Cuidado de la herida (cesárea) o episiotomía",
      "Inicio gradual de ejercicios de suelo pélvico",
      "Establecimiento de la lactancia materna",
      "Vigilancia y control del sangrado posparto"
    ],
    icono: "mdi:clock-start"
  },
  {
    titulo: "Fase intermedia (6 semanas-6 meses)",
    descripcion: "Etapa de consolidación y regreso gradual a la actividad",
    recomendaciones: [
      "Valoración ginecológica completa",
