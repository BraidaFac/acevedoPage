// Datos para tratamientos
const tratamientos = [
  {
    nombre: "Radiofrecuencia Orbital Enygma",
    descripcion: "Tratamiento no invasivo que estimula la producción de colágeno utilizando ondas de radiofrecuencia",
    beneficios: ["Estimulación de colágeno", "Mejora de elasticidad", "No invasivo"],
    link: "/tratamientos/enygma"
  },
  {
    nombre: "Terapia Láser Vaginal",
    descripcion: "Tecnología láser que regenera los tejidos y mejora la vascularización de la zona íntima",
    beneficios: ["Regeneración tisular", "Mejora vascularización", "Resultados duraderos"],
    link: "/tratamientos/laser-vaginal"
  },
  {
    nombre: "Tratamientos Hormonales",
    descripcion: "Terapias específicas para equilibrar los niveles hormonales y aliviar síntomas",
    beneficios: ["Equilibrio hormonal", "Alivio de síntomas", "Mejora de lubricación"],
    link: "/tratamientos/tratamientos-hormonales"
  },
  {
    nombre: "Hidratación Íntima",
    descripcion: "Tratamientos y productos especializados para mejorar la lubricación y el confort",
    beneficios: ["Hidratación profunda", "Confort inmediato", "Uso seguro"],
    link: "/tratamientos/hidratacion-intima"
  }
