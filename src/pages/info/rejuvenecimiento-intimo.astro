---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import rejuvenecimientoIntimo from '../../assets/fotos/reju.jpg';
import Contact from '../../components/Contact.astro';
import Treatments from '../../components/Treatments.tsx';
import Layout from '../../layouts/Layout.astro';

const title = "Rejuvenecimiento Íntimo | Información Médica";
const description = "Información completa sobre el rejuvenecimiento íntimo femenino, causas del envejecimiento y tratamientos disponibles para mejorar su calidad de vida.";

// Datos estructurados para las causas del envejecimiento íntimo
