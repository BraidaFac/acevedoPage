  <!-- Script mejorado para las pestañas y para asegurar funcionamiento -->
  <script is:inline>
    // Función para inicializar las funcionalidades
    function initializeNutricionPage() {
      // Sistema de pestañas
      const tabButtons = document.querySelectorAll('.tab-button');
      const tabContents = document.querySelectorAll('.tab-content');
      
      if (tabButtons.length > 0 && tabContents.length > 0) {
        // Remover listeners existentes para evitar duplicados
        tabButtons.forEach(function(button) {
          // Clonar el elemento para remover todos los event listeners
          const newButton = button.cloneNode(true);
          button.parentNode.replaceChild(newButton, button);
        });
        
        // Obtener los botones nuevamente después del clonado
        const newTabButtons = document.querySelectorAll('.tab-button');
        
        newTabButtons.forEach(function(button) {
          button.addEventListener('click', function() {
            const index = this.getAttribute('data-index');
            
            // Actualizar botones
            newTabButtons.forEach(function(btn) {
              btn.classList.remove('active-tab', 'bg-primary-100', 'text-primary-800');
              btn.classList.add('bg-gray-50', 'text-gray-600');
              btn.setAttribute('aria-selected', 'false');
            });
            
            button.classList.add('active-tab', 'bg-primary-100', 'text-primary-800');
            button.classList.remove('bg-gray-50', 'text-gray-600');
            button.setAttribute('aria-selected', 'true');
            
            // Actualizar contenido
            tabContents.forEach(function(content) {
              content.classList.add('hidden');
              if (content.getAttribute('data-index') === index) {
                content.classList.remove('hidden');
              }
            });
          });
        });
      }
      
      // Detectar soporte para hover
      const hasHoverSupport = window.matchMedia('(hover: hover)').matches;
      if (!hasHoverSupport) {
        document.querySelectorAll('.flip-card').forEach(function(card) {
          card.addEventListener('click', function() {
            this.classList.toggle('flipped');
          });
        });
      }
      
      // Asegurar que los enlaces de contacto funcionen
      document.querySelectorAll('a[href="#contact"]').forEach(function(link) {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          const contactElement = document.getElementById('contact');
          if (contactElement) {
            contactElement.scrollIntoView({ behavior: 'smooth' });
          }
        });
      });
    }
    
    // Ejecutar en carga inicial
    document.addEventListener('DOMContentLoaded', initializeNutricionPage);
    
    // Ejecutar cuando Astro hace client-side navigation
    document.addEventListener('astro:page-load', initializeNutricionPage);
    
    // Fallback: ejecutar inmediatamente si el DOM ya está listo
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializeNutricionPage);
    } else {
      initializeNutricionPage();
    }
  </script>
