---
export interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 hover:border-primary-200">
  <div class="flex items-center gap-3 mb-4">
    <div class="w-10 h-10 bg-primary-50 rounded-lg flex items-center justify-center">
      <span class="text-lg">{icon}</span>
    </div>
    <h3 class="text-base font-semibold text-title-100">
      {title}
    </h3>
  </div>
  <p class="text-gray-600 text-sm leading-relaxed">
    {description}
  </p>
</div> 