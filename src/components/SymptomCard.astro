---
export interface Props {
  title: string;
  description: string;
  index: number;
  showIndex: boolean;
}

const { title, description, index, showIndex } = Astro.props;
---

<div class="flex items-start gap-6 group">
  {showIndex && (
    <div class="flex-shrink-0 w-8 h-8 bg-primary-100 rounded-full flex items-center justify-center text-sm font-bold text-primary-600 group-hover:bg-primary-200 transition-colors duration-300">
      {index}
    </div>
  )}
  <div class="flex-1">
    <h3 class="text-lg font-semibold text-title-100 mb-2 group-hover:text-primary-600 transition-colors duration-300">
      {title}
    </h3>
    <p class="text-black leading-relaxed">
      {description}
    </p>
  </div>
</div> 