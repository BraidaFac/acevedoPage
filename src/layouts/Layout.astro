---
import { ClientRouter } from 'astro:transitions';
import Nav from '../components/Nav.jsx';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import '../styles/global.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Favicon y iconos -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
		<!-- Meta tags para mejor SEO -->
		<meta name="description" content="Dra. Acevedo Cecilia - Ginecología y Obstetricia. Consultas médicas especializadas en salud femenina." />
		<meta name="keywords" content="ginecología, obstetricia, salud femenina, consulta médica, embarazo" />
		<meta name="author" content="Dra. Acevedo Cecilia" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://draceciliaacevedo.com.ar/" />
		<meta property="og:title" content="Dra. Acevedo Cecilia - Ginecología y Obstetricia" />
		<meta property="og:description" content="Consultas médicas especializadas en salud femenina." />
		<meta property="og:image" content="/og-image.jpg" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://draceciliaacevedo.com.ar/" />
		<meta property="twitter:title" content="Dra. Acevedo Cecilia - Ginecología y Obstetricia" />
		<meta property="twitter:description" content="Consultas médicas especializadas en salud femenina." />
		<meta property="twitter:image" content="/og-image.jpg" />
		
		<title>Dra. Acevedo Cecilia</title>
		<ClientRouter  />
	</head>
	<body class="font-display">
		<Nav client:load/>
		<slot />
		<WhatsAppButton />
	</body>
	<script>
		import { initAccordions, initDropdowns } from 'flowbite';
		document.addEventListener('astro:after-swap', () => {
			initDropdowns();
			initAccordions();
		});
		
		// Inicializar en la carga inicial
		document.addEventListener('DOMContentLoaded', () => {
			initDropdowns();
			initAccordions();
		});
	</script>
</html>

<style is:global>
	html,
	body {
		overflow-x: hidden;
	}
	
</style>
